{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/dist/**"] }
    },
    {
      "src": "frontend/dist/**",
      "use": "@vercel/static",
      "config": {
        "includeFiles": ["frontend/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/",
      "dest": "frontend/dist/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "frontend/dist/$1"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}
